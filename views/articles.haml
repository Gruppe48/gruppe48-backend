- if @articles.length > 0 then
  .articles
    - @articles.each do |article|
      - if @slider then
        #slider
          .slide#previous
            %a{:href => "/?page=#{prevMonth(article.id)}#article"}
              %img{:src => "/images/months/#{prevMonth(article.id)}.jpg", :alt => "Forrige måned"}
          .slide#current
            %img{:src => "/images/months/#{article.id}.jpg", :alt => "Bilde for #{article.title}"}
          .slide#next
            %a{:href => "/?page=#{nextMonth(article.id)}#article"}
              %img{:src => "/images/months/#{nextMonth(article.id)}.jpg", :alt => "Neste måned"}
    
        %article#article
          =article.content
      - elsif @list then
        %li
          %a{:href => "/article/#{article.id}"}
            =article.title
      - elsif @full then
        %article  
          %h1= article.title
          =article.content
        
- else      
  %p Det finnes ingen artikler!